{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console"
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss.fff} {SourceContext} {Level:u3}] #{ThreadId}{TraceIdentifier}: {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./EventManagementSystem-.txt",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss.fff} {SourceContext} {Level:u3}] #{ThreadId}{TraceIdentifier}: {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "EventManagementSystemDBConnect": "Host=localhost;Port=5432;Database=EventManagementSystem;Username=postgres;Password=postgres;"
  }
}
